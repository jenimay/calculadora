programa {
  funcao inicio() {
    
      inteiro n1, n2, resultado
      real resultado2
  
      escreva("Irforme o primeiro valor: \n")
      leia(n1)

      limpa()
      escreva("Informe o segundo valor: \n")
      leia(n2)

      limpa()
      //Executando a soma
      resultado = n1 + n2
      escreva ("A soma dos valores ", n1, " + ", n2, " = ", resultado)


      limpa()
      //Executando a soma
      resultado = n1 + n2
      escreva ("O resultado dos valores ", n1, " + ", n2, " = ", resultado)

      //Executando a subtração
      resultado = n1 - n2
      escreva ("\nO resultado dos valores ", n1, " - ", n2, " = ", resultado)

      //EXecutando a multiplicação
      resultado = n1 * n2
      escreva ("\nO resultado dos valores ", n1, " * ", n2, " = ", resultado)

      //Executando a Divisão
      resultado2= n1 / n2
      escreva ("\nO resultado dos valores ", n1, " / ", n2, " = ", resultado2)
      



 }
}




programa 
{
	funcao inicio() 
	{
		inteiro numero, resultado, contador
		
		escreva("Informe um número para ver sua tabuada: ")
		leia(numero)

		limpa()
		
		para (contador = 1; contador <= 10; contador++) 
		{
			resultado = numero * contador 
			escreva (numero, " X ", contador, " = ", resultado , "\n")
		}
	}
}
